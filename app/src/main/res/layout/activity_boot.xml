<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7C8D8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:paddingStart="10dp"
            android:textStyle="normal|bold"
            android:id="@+id/time_tv"
            android:textSize="20sp"
            android:textColor="@color/dialerBgdColor" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:id="@+id/signalico"
            android:src="@drawable/signal5"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:src="@drawable/bat_100_per"
            android:id="@+id/batteryico"
            android:layout_toStartOf="@+id/signalico" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="end"
            android:src="@drawable/charge"
            android:id="@+id/chargeico"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/batteryico" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_fragment"
        >

    </RelativeLayout>
</LinearLayout>
</layout>