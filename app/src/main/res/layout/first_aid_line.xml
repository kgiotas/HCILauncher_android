<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingTop="10dp" android:paddingBottom="10dp"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/bat_0_per"
        android:id="@+id/first_aid_iv"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_aid_tv"
        android:textSize="25sp"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@+id/first_aid_iv"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp" />
</RelativeLayout>

